<div class="comments">
  {{#each this}}
  <div class="card">
      <section class="comment card-body">
          <div class="comment-text">
              {{comment_text}}
          </div>
          <div class="meta">
                   -> {{user.username}} on {{format_date created_at}}
          </div>
      </section>
  </div>
  {{/each}}
</div>

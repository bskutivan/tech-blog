<div class="card">
    <h3 class="card-header ">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input post-title"/>

        <label for="post-contents" class="form-label">Content</label>
        <input name="post-contents" type="text" value="{{post.contents}}" class="form-input post-contents" />

        <button type="submit" class="btn long-btn">Update Post</button>
        <button type="submit" class="btn long-btn">Delete Post</button>
    </form>
</div>

<script src="/javascript/delete-post.js"></script>
<script src="/javascript/edit-post.js"></script>